<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">	
	<!-- Admin servlets -->
	<servlet>
		<servlet-name>AdminLoginServlet</servlet-name>
		<servlet-class>servlet.admin.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminDashboardServlet</servlet-name>
		<servlet-class>servlet.admin.DashboardServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ViewBranchesServlet</servlet-name>
		<servlet-class>servlet.admin.ViewBranchesServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BranchServlet</servlet-name>
		<servlet-class>servlet.admin.BranchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddBranchServlet</servlet-name>
		<servlet-class>servlet.admin.AddBranchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MergeBranchServlet</servlet-name>
		<servlet-class>servlet.admin.MergeBranchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminLogoutServlet</servlet-name>
		<servlet-class>servlet.admin.LogoutServlet</servlet-class>
	</servlet>
	
	<!-- Admin servlet mappings -->
	<servlet-mapping>
		<servlet-name>AdminLoginServlet</servlet-name>
		<url-pattern>/login/admin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminDashboardServlet</servlet-name>
		<url-pattern>/admin/dashboard</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ViewBranchesServlet</servlet-name>
		<url-pattern>/admin/branches</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BranchServlet</servlet-name>
		<url-pattern>/admin/branches/branch/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddBranchServlet</servlet-name>
		<url-pattern>/admin/branches/branch/create</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MergeBranchServlet</servlet-name>
		<url-pattern>/admin/branches/branch/merge</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminLogoutServlet</servlet-name>
		<url-pattern>/admin/logout</url-pattern>
	</servlet-mapping>

	<!-- Filters -->
	<filter>
		<filter-name>SkipAuthenticationPageFilter</filter-name>
		<filter-class>filter.SkipAuthenticationPageFilter</filter-class>
	</filter>
	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>filter.AuthenticationFilter</filter-class>
	</filter>
	<filter>
		<filter-name>AdminAuthenticationFilter</filter-name>
		<filter-class>filter.admin.AdminAuthenticationFilter</filter-class>
	</filter>

	<!-- Filter mappings -->
	<filter-mapping>
		<filter-name>SkipAuthenticationPageFilter</filter-name>
		<url-pattern>/login/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	<!-- Apply the above filter to all roles -->
	<filter-mapping>
		<filter-name>AdminAuthenticationFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
</web-app>